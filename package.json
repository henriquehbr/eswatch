{
  "name": "eswatch",
  "version": "0.7.0",
  "main": "lib/index.js",
  "author": "Henrique Borges <henriqueborgeshbr@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "lib"
  ],
  "bin": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/henriquehbr/eswatch"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "scripts": {
    "dev": "eswatch --minify --bundle --format esm --splitting --clear --outdir ./lib --watch ./src/**/* ./src/index.ts --run \"node lib --bundle --format esm --splitting --outdir ./lib/example-build --clear --run --watch ./example/**/* ./example/index.ts\"",
    "lint": "eslint --fix \"src/**/*.ts\" && tsc --noEmit -p ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && git add .",
      "pre-push": "yarn lint"
    }
  },
  "devDependencies": {
    "@types/eslint": "^7.2.4",
    "@types/inquirer": "^7.3.1",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-hbr": "^1.0.0-beta.4",
    "eslint-plugin-import": "^2.22.1",
    "eswatch": "^0.7.0",
    "husky": "^4.3.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "esbuild": "^0.8.0",
    "find-up": "^5.0.0",
    "inquirer": "^7.3.3",
    "minimist": "^1.2.5"
  }
}
